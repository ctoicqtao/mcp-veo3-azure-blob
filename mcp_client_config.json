{
  "mcpServers": {
    "veo3-azure": {
      "command": "python",
      "args": ["/path/to/mcp-veo3-azure-blob/mcp_server.py", "--output-dir", "~/Videos/Generated"],
      "env": {
        "GEMINI_API_KEY": "your_gemini_api_key_here",
        "AZURE_STORAGE_CONNECTION_STRING": "your_azure_connection_string_here",
        "AZURE_BLOB_CONTAINER_NAME": "generated-videos",
        "AZURE_UPLOAD_ENABLED": "true"
      },
      "timeout": 600000,
      "requestTimeout": 600000,
      "capabilities": {
        "tools": {
          "timeout": 600000
        }
      }
    }
  }
}
